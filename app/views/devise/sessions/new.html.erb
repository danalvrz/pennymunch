<div class="w-full container mx-auto">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="border-b container py-4 w-full mb-5 mt-3 flex justify-between">
<%= link_to "/" do %>
  <%= image_tag "arrow.png", class:"invert rotate-180", size:"40", alt: "logo" %>
<% end %>
<h2 class="text-white text-4xl text-center">Login</h2>
<div class="actions border p-2 text-white text-lg hover:bg-white hover:text-gray-600 rounded-lg">
    <%= f.submit "Log in" %>
  </div>
</div>
<div class="mt-4 py-10 px-2">
  <div class="text-white"><%= render "devise/shared/error_messages", resource: resource %></div>
  <div class="field w-full">
    <%= f.email_field :email, placeholder: 'email', autocomplete: "email", class: "bg-black/[.20] text-white rounded-lg w-full py-4 my-2 text-2xl" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: 'password', autocomplete: "current-password", class: "bg-black/[.20] text-white rounded-lg w-full py-4 my-1 text-2xl" %>
  </div>
  </div>

  <%#<% if devise_mapping.rememberable? %>
    <%#<div class="field">
      <%#<%= f.check_box :remember_me %>
      <%#<%= f.label :remember_me %>
    <%#</div>
  <%#<% end %>
<% end %>

<%#<%= render "devise/shared/links" %>
<div class="w-full flex justify-center mt-3">
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-white w-full text-center text-xl hover:underline" %><br />
<% end %>
</div>
</div>
