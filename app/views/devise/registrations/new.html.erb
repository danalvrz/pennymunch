<div class="w-full container mx-auto">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="border-b container py-4 w-full mb-5 mt-3 flex justify-between">
<%= link_to "/" do %>
  <%= image_tag "arrow.png", class:"invert rotate-180", size:"40", alt: "logo" %>
<% end %>
<h2 class="text-white text-4xl text-center mr-10">Sign up</h2>

</div>
<div class="mt-4 py-10 px-2">
  <div class="text-white"><%= render "devise/shared/error_messages", resource: resource %></div>
  <div class="field">
    <%= f.text_field :name, placeholder: "full name", class: "bg-black/[.20] text-white rounded-lg w-full py-3 my-2 text-2xl" %>
  </div>

  <div class="field">
    <%= f.email_field :email, placeholder: "email", autofocus: true, autocomplete: "email", class: "bg-black/[.20] text-white rounded-lg w-full py-3 my-2 text-2xl" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "password (#{@minimum_password_length} characters minimum)", class: "bg-black/[.20] text-white rounded-lg w-full py-3 my-2 text-2xl" %>
    <% end %><br />
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password confirmation", class: "bg-black/[.20] text-white rounded-lg w-full py-3 my-2 text-2xl" %>
  </div>
  <div class="rounded-lg actions border p-2 text-center text-white text-2xl hover:bg-white hover:text-gray-600 w-1/2 mx-auto mt-10">
    <%= f.submit "Sign up" %>
  </div>
  </div>

  <%#<% if devise_mapping.rememberable? %>
    <%#<div class="field">
      <%#<%= f.check_box :remember_me %>
      <%#<%= f.label :remember_me %>
    <%#</div>
  <%#<% end %>
<% end %>

<%#<%= render "devise/shared/links" %>
<div class="w-full flex justify-center mt-3">
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-white w-full text-center text-xl hover:underline" %><br />
<% end %>
</div>
</div>