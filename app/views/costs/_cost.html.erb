<div id="<%= dom_id cost %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= cost.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Amount:</strong>
    <%= cost.amount %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this cost", category_costs_path(cost), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%#<%= link_to 'Edit this cost', edit_category_cost_path(cost), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
