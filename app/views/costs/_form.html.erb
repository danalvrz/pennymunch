<%= form_with(url: category_costs_url, model: cost, class: "contents") do |form| %>
  <% if cost.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(cost.errors.count, "error") %> prohibited this cost from being saved:</h2>

      <ul>
        <% cost.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.text_field :name, placeholder: "name", class: "rounded-lg w-full py-4 my-1 text-2xl" %>
  </div>

  <div class="my-5">
    <%= form.text_field :amount, placeholder: "amount", class: "rounded-lg w-full py-4 my-1 text-2xl" %>
  </div>

  <div class="w-full container flex justify-center mt-10">
    <%= form.submit "Add expense", class: "my-2 text-gray-600 bg-white border hover:bg-transparent hover:border hover:text-white text-2xl p-4 rounded-lg mx-auto" %>
  </div>
<% end %>
